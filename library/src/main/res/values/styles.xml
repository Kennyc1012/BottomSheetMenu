<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.BottomSheetMenuDialog.Light" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottom_sheet_menu_title_text_appearance">
            @style/BottomSheetMenu.Title.TextAppearance.Light
        </item>
        <item name="bottom_sheet_menu_list_text_appearance">
            @style/BottomSheetMenu.ListItem.TextAppearance.Light
        </item>
        <item name="bottom_sheet_menu_grid_text_appearance">
            @style/BottomSheetMenu.GridItem.TextAppearance.Light
        </item>
        <item name="bottom_sheet_menu_selector">@drawable/bs_list_selector</item>
    </style>

    <style name="Theme.BottomSheetMenuDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottom_sheet_menu_title_text_appearance">
            @style/BottomSheetMenu.Title.TextAppearance
        </item>
        <item name="bottom_sheet_menu_list_text_appearance">
            @style/BottomSheetMenu.ListItem.TextAppearance
        </item>
        <item name="bottom_sheet_menu_grid_text_appearance">
            @style/BottomSheetMenu.GridItem.TextAppearance
        </item>
        <item name="bottom_sheet_menu_selector">@drawable/bs_list_selector</item>
    </style>

    <style name="Base.BottomSheetMenu.Title.TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/bottom_sheet_menu_text_size</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_55</item>
    </style>


    <style name="BottomSheetMenu.Title" parent="@android:style/Widget.TextView">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">@dimen/bottom_sheet_menu_dialog_padding</item>
        <item name="android:paddingRight">@dimen/bottom_sheet_menu_dialog_padding</item>
    </style>

    <style name="BottomSheetMenu.ListItem" parent="BottomSheetMenu.Title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">@dimen/bottom_sheet_menu_dialog_padding</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="BottomSheetMenu.GridItem" parent="BottomSheetMenu.ListItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


    <!-- Light Styles -->
    <style name="BottomSheetMenu.Title.TextAppearance.Light" parent="Base.BottomSheetMenu.Title.TextAppearance">
        <item name="android:textColor">@color/black_55</item>
    </style>

    <style name="BottomSheetMenu.ListItem.TextAppearance.Light" parent="android:TextAppearance">
        <item name="android:textColor">@color/bottom_sheet_list_item_color_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomSheetMenu.GridItem.TextAppearance.Light" parent="android:TextAppearance">
        <item name="android:textColor">@color/bottom_sheet_list_item_color_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Dark style -->
    <style name="BottomSheetMenu.Title.TextAppearance" parent="Base.BottomSheetMenu.Title.TextAppearance" />

    <style name="BottomSheetMenu.ListItem.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">@color/bottom_sheet_list_item_color_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomSheetMenu.GridItem.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">@color/bottom_sheet_list_item_color_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>